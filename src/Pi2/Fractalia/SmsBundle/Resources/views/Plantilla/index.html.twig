{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Plantilla list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Elementos</th>
                <th>Texto</th>
                <th>Log</th>
                <th>Fechacreacion</th>
                <th>Fechaactualizacion</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('plantilla_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.elementos }}</td>
                <td>{{ entity.texto }}</td>
                <td>{{ entity.log }}</td>
                <td>{% if entity.fechaCreacion %}{{ entity.fechaCreacion|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.fechaActualizacion %}{{ entity.fechaActualizacion|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('plantilla_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('plantilla_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('plantilla_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
