{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Mensaje</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Incidenciaid</th>
                <td>{{ entity.incidenciaId }}</td>
            </tr>
            <tr>
                <th>Templatename</th>
                <td>{{ entity.templateName }}</td>
            </tr>
            <tr>
                <th>Texto</th>
                <td>{{ entity.texto }}</td>
            </tr>
            <tr>
                <th>Fechaconstruccion</th>
                <td>{{ entity.fechaConstruccion|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Estadoconstruccion</th>
                <td>{{ entity.estadoConstruccion }}</td>
            </tr>
            <tr>
                <th>Logfalloconstruccion</th>
                <td>{{ entity.logFalloConstruccion }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('mensaje') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('mensaje_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
