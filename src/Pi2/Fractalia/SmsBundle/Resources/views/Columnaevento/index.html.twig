{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Columnaevento list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Numerocaso</th>
                <th>Cliente</th>
                <th>Tipo</th>
                <th>Tecnico</th>
                <th>Tsol</th>
                <th>Fecha</th>
{#                <th>Modo</th>#}
                <th>Detalle</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('evento_show', { 'id': entity.id }) }}">{{ entity.numeroCaso }}</a></td>
                <td>{{ entity.cliente }}</td>
                <td>{{ entity.tipo }}</td>
                <td>{{ entity.tecnico }}</td>
                <td>{{ entity.tsol }}</td>
                <td>{% if entity.fecha %}{{ entity.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
{#                <td>{{ entity.modo }}</td>#}
                <td>{{ entity.detalle }}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('evento_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('evento_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('evento_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
