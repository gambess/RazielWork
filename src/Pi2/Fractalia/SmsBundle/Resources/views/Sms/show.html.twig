{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Sms</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Destinatario</th>
                <td>{{ entity.destinatario }}</td>
            </tr>
            <tr>
                <th>Remitente</th>
                <td>{{ entity.remitente }}</td>
            </tr>
            <tr>
                <th>Respuesta</th>
                <td>{{ entity.respuesta }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{{ entity.estado }}</td>
            </tr>
            <tr>
                <th>Bitacora</th>
                <td>{{ entity.bitacora }}</td>
            </tr>
            <tr>
                <th>Fechaenvio</th>
                <td>{{ entity.fechaEnvio|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Fechacreacion</th>
                <td>{{ entity.fechaCreacion|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Fechaactualizacion</th>
                <td>{{ entity.fechaActualizacion|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('sms') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('sms_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
