<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Pi2\Fractalia\SmsBundle\Entity\Mensaje" table="Mensaje">
    <indexes>
      <index name="fk_mensaje_createdfrom_plantilla" columns="plantilla_id"/>
      <index name="fk_mensaje_isfrom_Incidencia" columns="Incidencia_id"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="texto" type="text" column="texto" nullable="false"/>
    <field name="estado" type="string" column="estado" length="20" nullable="false"/>
    <field name="bitacora" type="text" column="bitacora" nullable="false"/>
    <field name="fechaCreacion" type="datetime" column="fecha_creacion" nullable="false"/>
    <field name="fechaActualizacion" type="datetime" column="fecha_actualizacion" nullable="false"/>
    <field name="fechaInsercionSms" type="datetime" column="fecha_insercion_sms" nullable="true"/>
    <many-to-one field="incidencia" target-entity="Pi2\Fractalia\Entity\SGSD\Incidencia">
      <join-columns>
        <join-column name="Incidencia_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="plantilla" target-entity="Plantilla">
      <join-columns>
        <join-column name="plantilla_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
