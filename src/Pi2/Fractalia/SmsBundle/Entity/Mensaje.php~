<?php

namespace Pi2\Fractalia\SmsBundle\Entity;

use Doctrine\ORM\Mapping as ORM;

/**
 * Mensaje
 *
 * @ORM\Table(name="Mensaje", indexes={@ORM\Index(name="fk_MensajeEvento_Incidencia", columns={"incidencia_id"}), @ORM\Index(name="fk_Mensaje_Plantilla1", columns={"plantilla_id"})})
 * @ORM\Entity
 */
class Mensaje
{
    /**
     * @var string
     *
     * @ORM\Column(name="texto", type="text", nullable=false)
     */
    private $texto;

    /**
     * @var string
     *
     * @ORM\Column(name="estado", type="string", length=20, nullable=false)
     */
    private $estado;

    /**
     * @var string
     *
     * @ORM\Column(name="log", type="text", nullable=false)
     */
    private $log;

    /**
     * @var \DateTime
     *
     * @ORM\Column(name="fecha_creacion", type="datetime", nullable=false)
     */
    private $fechaCreacion;

    /**
     * @var \DateTime
     *
     * @ORM\Column(name="fecha_actualizacion", type="datetime", nullable=false)
     */
    private $fechaActualizacion;

    /**
     * @var \DateTime
     *
     * @ORM\Column(name="fecha_adjuntado_sms", type="datetime", nullable=false)
     */
    private $fechaAdjuntadoSms;

    /**
     * @var integer
     *
     * @ORM\Column(name="id", type="integer")
     * @ORM\Id
     * @ORM\GeneratedValue(strategy="IDENTITY")
     */
    private $id;

    /**
     * @var \Pi2\Fractalia\SmsBundle\Entity\Plantilla
     *
     * @ORM\ManyToOne(targetEntity="Pi2\Fractalia\SmsBundle\Entity\Plantilla")
     * @ORM\JoinColumns({
     *   @ORM\JoinColumn(name="plantilla_id", referencedColumnName="id")
     * })
     */
    private $plantilla;

    /**
     * @var \Pi2\Fractalia\SmsBundle\Entity\Incidencia
     *
     * @ORM\ManyToOne(targetEntity="Pi2\Fractalia\SmsBundle\Entity\Incidencia")
     * @ORM\JoinColumns({
     *   @ORM\JoinColumn(name="incidencia_id", referencedColumnName="id")
     * })
     */
    private $incidencia;


}
